    <!-- 5. HTML Test Item with all possible HTML elements -->
    <item>
      <title>HTML Comprehensive Test</title>
      <link>https://example.com/html-test</link>
      <description><![CDATA[Comprehensive HTML markup for testing samenvatting]]></description>
      <guid>html-test-1</guid>
      <pubDate>Wed, 25 Jun 2025 12:00:00 +0000</pubDate>
      <content:encoded><![CDATA[
        <!-- Semantic Structure -->
        <header>
          <h1>Heading Level 1</h1>
          <nav>
            <ul>
              <li><a href="#section1">Section 1</a></li>
              <li><a href="#section2">Section 2</a></li>
              <li><a href="#section3">Section 3</a></li>
            </ul>
          </nav>
        </header>

        <section id="section1">
          <h2>Section 1</h2>
          <p>This is a <em>paragraph</em> with <strong>bold</strong>, <small>small text</small>, <sub>subscript</sub>, <sup>superscript</sup>, and a line break.<br/>New line here.</p>
          <blockquote cite="https://example.com">
            <p>Blockquote example with a citation.</p>
          </blockquote>
        </section>

        <section id="section2">
          <h2>Section 2</h2>
          <!-- Lists -->
          <ul>
            <li>Unordered Item 1</li>
            <li>Unordered Item 2
              <ol>
                <li>Nested Ordered 1</li>
                <li>Nested Ordered 2</li>
              </ol>
            </li>
          </ul>
          <ol>
            <li>Ordered Item 1</li>
            <li>Ordered Item 2</li>
          </ol>

          <!-- Table -->
          <table border="1">
            <caption>Sample Table</caption>
            <thead>
              <tr><th>Header 1</th><th>Header 2</th></tr>
            </thead>
            <tbody>
              <tr><td>Data 1</td><td>Data 2</td></tr>
              <tr><td>Data 3</td><td>Data 4</td></tr>
            </tbody>
            <tfoot>
              <tr><td colspan="2">Footer</td></tr>
            </tfoot>
          </table>
        </section>

        <section id="section3">
          <h2>Section 3: Media & Interactive</h2>
          <!-- Images and Figures -->
          <figure>
            <img src="https://example.com/image.jpg" alt="Example Image" width="200" height="150"/>
            <figcaption>Figure caption text.</figcaption>
          </figure>

          <!-- Video & Audio -->
          <video controls width="300">
            <source src="https://example.com/video.mp4" type="video/mp4"/>
            Your browser does not support the video tag.
          </video>
          <audio controls>
            <source src="https://example.com/audio.mp3" type="audio/mpeg"/>
            Your browser does not support the audio element.
          </audio>

          <!-- Canvas and SVG -->
          <canvas id="testCanvas" width="200" height="100">Canvas not supported.</canvas>
          <svg width="100" height="100">
            <circle cx="50" cy="50" r="40" stroke="black" stroke-width="2" fill="red"/>
          </svg>

          <!-- Form Elements -->
          <form action="/submit" method="post">
            <label for="text">Text:</label>
            <input type="text" id="text" name="text" value="Sample"/><br/>
            <label><input type="checkbox" name="chk" checked/> Checkbox</label><br/>
            <label for="sel">Select:</label>
            <select id="sel" name="sel">
              <option value="one">One</option>
              <option value="two">Two</option>
            </select><br/>
            <label for="msg">Message:</label><br/>
            <textarea id="msg" name="msg">Textarea content</textarea><br/>
            <button type="submit">Submit</button>
          </form>

          <!-- Inline Code & Preformatted -->
          <p>Inline code: <code>console.log("Hello!")</code></p>
          <pre>
function hello() {
  return "Preformatted text";
}
          </pre>

          <hr/>

          <!-- Metadata & Misc -->
          <time datetime="2025-06-25T12:00:00Z">June 25, 2025</time>
          <mark>Highlighted text</mark>
          <del>Deleted text</del>
          <ins>Inserted text</ins>
        </section>

        <footer>
          <p>&copy; 2025 Example Corp.</p>
        </footer>
      ]]></content:encoded>
